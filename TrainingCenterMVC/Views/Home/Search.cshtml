@model IEnumerable<TrainingCenterMVC.Models.Courses>

@{
    ViewBag.Title = "Search";
}

<style>
    #details{
        font-size:20px;
    }
</style>


<div class="container">
   
      
        <div class="row" style="margin-bottom:130px">



            @foreach (var subitem in Model)
            {

                <div class="col-lg-4 col-md-6">

                    <div class="box text-center">

                        <div class="img">

                            <img src="~/Upload/@subitem.Image" width="200" height="130">

                        </div>

                        <h3>@subitem.NameCourse</h3>

                        @Html.ActionLink("Details", "Details", new { CourseId = subitem.Id }, new { @class = "btn btn-default",@id="details" }) |

                        <ul class="details list-unstyled">
                            <li>No OF Hours &nbsp;&nbsp;&nbsp; @subitem.Hours &nbsp;H  <span><i class="fa  fa-hourglass-1" style="color:orangered"></i></span></li>
                            <hr style="color:black;opacity:.7;" />
                            <li>Price &nbsp;&nbsp;&nbsp;@subitem.Price &nbsp;EL <span><i class="fa fa-check" style="color:orangered"></i></span></li>
                            <hr />
                        </ul>

                        <div class="btn btn-info">
                            <a href="~/Home/Apply" style="color:#fff;text-align:center;font-size:20px;">Join Course</a>
                        </div>

                    </div>
                </div>




              
            }


        </div>


    




</div>


